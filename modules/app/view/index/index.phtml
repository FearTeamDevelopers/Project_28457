{if $isPM}
    <div class="box grid_6">
        <div class="box-head"><h2>Assigned to projects</h2></div>
        <div class="box-content no-pad">
            <table class="display">
                <thead>
                    <tr>
                        <th>Name</th><th>Client</th>
                        <th>State</th><th>Priority</th>
                        <th>Manager</th>
                    </tr>
                </thead>
                <tbody>
                    {if !empty($assignedTo)}
                        {foreach $project in $assignedTo}
                            {if $project->pPriority > 3}
                            <tr class="row-high-priority">
                                {/if}{else}
                            <tr>
                                {/else}
                                <td><a href="/project/{echo $project->pUrlKey}/">{echo $project->pTitle}</a></td>
                                <td>{echo $project->companyName}</td>
                                <td>{echo $project->stateTitle}</td>
                                <td>{echo $project->pPriority}</td>
                                <td>{echo $project->managerFname." ".$project->managerLname}</td>
                            </tr>
                        {/foreach}
                    {/if}
                </tbody>
            </table>
        </div>
    </div>

    <div class="box grid_6">
        <div class="box-head"><h2>Current tasks</h2></div>
        <div class="box-content no-pad">
            <table class="display-short">
                <thead>
                    <tr>
                        <th>Name</th><th>Project</th>
                        <th>State</th><th>Priority</th>
                    </tr>
                </thead>
                <tbody>
                    {if !empty($currentTasks)}
                        {foreach $task in $currentTasks}
                            {if $task->tPriority > 3}
                            <tr class="row-high-priority">
                                {/if}{else}
                            <tr>
                                {/else}
                                <td><a href="/task/{echo $task->getUrlKey()}/">{echo $task->title}</a></td>
                                <td><a href="/project/{echo $task->pUrlKey}/">{echo $task->pTitle}</a></td>
                                <td>{echo $task->stateTitle}</td>
                                <td>{echo $task->priority}</td>
                            </tr>
                        {/foreach}
                    {/if}
                </tbody>
            </table>
        </div>
    </div>
<div class="clear-both"></div>
    <div class="box grid_6">
        <div class="box-head"><h2>Manages projects</h2></div>
        <div class="box-content no-pad">
            <table class="display-short">
                <thead>
                    <tr>
                        <th>Name</th><th>Client</th>
                        <th>State</th><th>Priority</th>
                    </tr>
                </thead>
                <tbody>              
                    {if !empty($managedProjects)}
                        {foreach $managedProject in $managedProjects}
                            {if $managedProject->pPriority > 3}
                            <tr class="row-high-priority">
                                {/if}{else}
                            <tr>
                                {/else}
                                <td><a href="/project/{echo $managedProject->pUrlKey}/">{echo $managedProject->pTitle}</a></td>
                                <td>{echo $managedProject->companyName}</td>
                                <td>{echo $managedProject->stateTitle}</td>
                                <td>{echo $managedProject->pPriority}</td>
                            </tr>
                        {/foreach}
                    {/if}
                </tbody>
            </table>
        </div>
    </div>

    <div class="box grid_6">
        <div class="box-head"><h2>Deadlines in next 7 days</h2></div>
        <div class="box-content no-pad">
            <table class="display-short">
                <thead>
                    <tr>
                        <th>Name</th><th>Created</th><th>Client</th>
                        <th>Planned end</th><th>State</th>
                    </tr>
                </thead>
                <tbody>
                    {if !empty($deadlines)}
                        {foreach $deadline in $deadlines}
                            <tr>
                                <td><a href="/project/{echo $deadline->getUrlKey()}/">{echo $deadline->getTitle()}</a></td>
                                <td>{echo $deadline->getCreated()}</td>
                                <td>{echo $deadline->companyName}</td>
                                <td>{echo $deadline->getPlannedEnd()}</td>
                                <td>{echo $deadline->stateTitle}</td>
                            </tr>
                        {/foreach}
                    {/if}
                </tbody>
            </table>
        </div>
    </div>
<div class="clear-both"></div>
    <div class="box grid_6">
        <div class="box-head"><h2>Projects Waiting to approve</h2></div>
        <div class="box-content no-pad">
            <table class="display-short">
                <thead>
                    <tr>
                        <th>Project</th><th>Created</th>
                        <th>Manager</th><th>Client</th>
                    </tr>
                </thead>
                <tbody>     
                    {if !empty($projectsWaitingToApprove)}
                        {foreach $projectWaitToApprove in $projectsWaitingToApprove}
                            <tr>
                                <td><a href="/project/{echo $projectWaitToApprove->getUrlKey()}/">
                                        {echo $projectWaitToApprove->getTitle()}</a></td>
                                <td>{echo $projectWaitToApprove->getCreated()}</td>
                                <td>{echo $projectWaitToApprove->managerFname." ".$projectWaitToApprove->managerLname}</td>
                                <td>{echo $projectWaitToApprove->companyName}</td>
                            </tr>
                        {/foreach}
                    {/if}
                </tbody>
            </table>
        </div>
    </div>

    <div class="box grid_6">
        <div class="box-head"><h2>Tasks Waiting to approve</h2></div>
        <div class="box-content no-pad">
            <table class="display-short">
                <thead>
                    <tr>
                        <th>Title</th><th>Created by</th>
                        <th>Project</th><th>Type</th>
                        <th>Created</th>
                    </tr>
                </thead>
                <tbody>     
                    {if !empty($tasksWaitingToApprove)}
                        {foreach $taskWaitToApprove in $tasksWaitingToApprove}
                            <tr>
                                <td><a href="/task/{echo $taskWaitToApprove->getUrlKey()}/">
                                        {echo $taskWaitToApprove->getTitle()}</a></td>
                                <td>{echo $taskWaitToApprove->tkFname." ".$taskWaitToApprove->tkLname}</td>
                                <td><a href="/project/{echo $taskWaitToApprove->pUrlKey}/">
                                        {echo $taskWaitToApprove->pTitle}</a></td>
                                <td>{echo $taskWaitToApprove->getTaskType()}</td>
                                <td>{echo $taskWaitToApprove->getCreated()}</td>
                            </tr>
                        {/foreach}
                    {/if}
                </tbody>
            </table>
        </div>
    </div>

    <div class="box grid_6">
        <div class="box-head"><h2>Notes</h2></div>
        <div class="box-content">
            <a class="button green" href="/note">Add new</a><br/><hr/>
            {if !empty($notes)}
                {foreach $note in $notes}
                    <div class="note">{echo $note->getTitle()." / ".$note->getCreated()}<br/>
                        <p>{echo html_entity_decode($note->getBody())}</p><br/>
                    </div>
                {/foreach}
            {/if}{else}
                <div class="message"><p>No notes found</p></div>
            {/else}
        </div>
    </div>
{/if}

{elseif $isDeveloper}
